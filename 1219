#include <stdio.h>
#include <math.h>

#define PI 3.1415926535897


void sort3(double arr[3]) {
    
    for (int i = 0; i < 2; i++) {
        for (int j = 0; j < 2 - i; j++) {
            if (arr[j] > arr[j + 1]) {
                double temp = arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;
            }
        }
    }
}

int main() {
    double a[3];
    
    
    while (scanf("%lf %lf %lf", &a[0], &a[1], &a[2]) == 3) {
        
        sort3(a);
        
        
        double p = (a[0] + a[1] + a[2]) / 2;
        
        
        double A = sqrt(p * (p - a[0]) * (p - a[1]) * (p - a[2]));
        
        
        double R = (a[0] * a[1] * a[2]) / (4 * A);
        
        
        double C = PI * R * R;
        
        
        double r = A / p;
        
        
        double c = PI * r * r;
        
        
        double v = A - c;  
        double s = C - A;  
        
        
        printf("%.4lf %.4lf %.4lf\n", s, v, c);
    }
    
    return 0;
}
